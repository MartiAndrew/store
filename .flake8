[flake8]
max-arguments = 6
max-local-variables = 6
max-annotation-complexity = 4
max-complexity = 6
max-awaits = 10
inline-quotes = double
max-line-length = 88
extend-ignore = E203
docstring_style=sphinx

ignore =
  ; Found `f` string
  WPS305,
  ; Found walrus operator
  WPS332,
  ; Found `noqa` comments overuse
  WPS402,
  ; Found wrong magic comment: type:
  WPS400,
  ; Missing docstring in public module
  D100,
  ; Missing docstring in magic method
  D105,
  ; Missing docstring in __init__
  D107,
  ; Found `__init__.py` module with logic
  WPS412,
  ; Found class without a base class
  WPS306,
  ; Missing docstring in public nested class
  D106,
  ; First line should be in imperative mood
  D401,
  ; Found `__init__.py` module with logic
  WPS326,
  ; Found string constant over-use
  WPS226,
  ; Found upper-case constant in a class
  WPS115,
  ; Found nested function
  WPS602,
  ; Found method without arguments
  WPS605,
  ; Found overused expression
  WPS204,
  ; Found too many module members
  WPS202,
  ; Found too high module cognitive complexity
  WPS232,
  ; line break before binary operator
  W503,
  ; Found module with too many imports
  WPS201,
  ; Inline strong start-string without end-string.
  RST210,
  ; Found nested class
  WPS431,
  ; Found wrong module name
  WPS100,
  ; Found too many methods
  WPS214,
  ; Found too long ``try`` body
  WPS229,
  ; Found unpythonic getter or setter
  WPS615,
  ; Found a line that starts with a dot
  WPS348,
  ; Found complex default value (for dependency injection)
  WPS404,
  ;  not perform function calls in argument defaults (for dependency injection)
  B008,
  WPS220,
  ; Found a too complex `f` string
  WPS237,
  ; Found underscored number name pattern
  WPS114
  ; Found too many imported names from a module
  WPS235
  ; Found module with too many imported names
  WPS203

per-file-ignores =
  ; all tests
  test_*.py,tests.py,tests_*.py,*/tests/*,conftest.py:
  ; Use of assert detected
  S101,
  ; Found too many `assert` statements
  WPS218,
  ; Found outer scope names shadowing
  WPS442,
  ; Found too many local variables
  WPS210,
  ; Found magic number
  WPS432,
  ; Missing parameter(s) in Docstring
  DAR101,
  ; Found too many arguments: 7 > 6
  WPS211,
  ;  Found too long name: > 45
  WPS118,
  ; Found protected module import
  WPS436

  ; all init files
  __init__.py:
  ; ignore not used imports
  F401,
  ; ignore import with wildcard
  F403,
  ; Found wrong metadata variable
  WPS410,
  ./common/base_workers/types.py:
  D101,
  D102,
  WPS428,
  WPS234,

  ; configuration
  settings.py:
  ; Found module with too many imported names
  WPS203,

exclude =
  ./.git,
  ./venv,
  migrations,
  ./var,
  cli,
